<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment"
    android:padding="24dp"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/input_history_til"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/reset_btn"
        app:layout_constraintBottom_toTopOf="@id/reset_btn"
        android:background="@color/textBackgroundColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:lines="4"
        android:inputType="none"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="AC"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toStartOf="@id/input_history_til"
        app:layout_constraintTop_toBottomOf="@id/input_history_til"
        app:layout_constraintBottom_toTopOf="@id/no9_btn"/>

    <TextView
        android:id="@+id/input_til"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginHorizontal="4dp"
        android:paddingVertical="4dp"
        android:background="@color/textBackgroundColor"
        android:inputType="none"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toEndOf="@id/reset_btn"
        app:layout_constraintEnd_toStartOf="@id/back_btn"
        app:layout_constraintTop_toTopOf="@id/reset_btn"
        app:layout_constraintBottom_toBottomOf="@id/reset_btn"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:padding="10dp"
        app:icon="@drawable/ic_outline_backspace_24"
        app:iconGravity="end"
        app:iconPadding="16dp"
        app:iconSize="52dp"
        app:iconTint="@color/colorPrimaryDark"
        app:iconTintMode="add"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="@id/input_history_til"
        app:layout_constraintTop_toTopOf="@id/reset_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no7_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="7"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toStartOf="@id/reset_btn"
        app:layout_constraintTop_toBottomOf="@id/reset_btn"
        app:layout_constraintBottom_toTopOf="@id/no4_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no8_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="8"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toEndOf="@id/no7_btn"
        app:layout_constraintEnd_toStartOf="@id/no9_btn"
        app:layout_constraintTop_toBottomOf="@id/reset_btn"
        app:layout_constraintBottom_toTopOf="@id/no5_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no9_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="9"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toEndOf="@id/no8_btn"
        app:layout_constraintEnd_toStartOf="@id/divide_btn"
        app:layout_constraintTop_toBottomOf="@id/reset_btn"
        app:layout_constraintBottom_toTopOf="@id/no6_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/divide_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="/"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="@id/input_history_til"
        app:layout_constraintBottom_toTopOf="@id/multiply_btn"
        app:layout_constraintTop_toBottomOf="@id/reset_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no4_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="4"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toStartOf="@id/reset_btn"
        app:layout_constraintTop_toBottomOf="@id/no7_btn"
        app:layout_constraintBottom_toTopOf="@id/no1_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no5_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="5"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toEndOf="@id/no4_btn"
        app:layout_constraintEnd_toStartOf="@id/no6_btn"
        app:layout_constraintTop_toBottomOf="@id/no8_btn"
        app:layout_constraintBottom_toTopOf="@id/no2_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no6_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="6"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toEndOf="@id/no5_btn"
        app:layout_constraintEnd_toStartOf="@id/minus_btn"
        app:layout_constraintTop_toBottomOf="@id/no9_btn"
        app:layout_constraintBottom_toTopOf="@id/no3_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/multiply_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="*"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="@id/back_btn"
        app:layout_constraintTop_toBottomOf="@id/divide_btn"
        app:layout_constraintBottom_toTopOf="@id/minus_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no1_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toStartOf="@id/reset_btn"
        app:layout_constraintTop_toBottomOf="@id/no4_btn"
        app:layout_constraintBottom_toTopOf="@id/no0_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toEndOf="@id/no1_btn"
        app:layout_constraintEnd_toStartOf="@id/no3_btn"
        app:layout_constraintTop_toBottomOf="@id/no5_btn"
        app:layout_constraintBottom_toTopOf="@id/comma_btn"
/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no3_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toEndOf="@id/no2_btn"
        app:layout_constraintEnd_toStartOf="@id/divide_btn"
        app:layout_constraintTop_toBottomOf="@id/no6_btn"
        app:layout_constraintBottom_toTopOf="@id/plus_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/minus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="@id/back_btn"
        app:layout_constraintTop_toBottomOf="@id/multiply_btn"
        app:layout_constraintBottom_toTopOf="@id/equals_btn"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no0_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toStartOf="@id/no1_btn"
        app:layout_constraintTop_toBottomOf="@id/no1_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/comma_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="."
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toEndOf="@id/no0_btn"
        app:layout_constraintEnd_toStartOf="@id/plus_btn"
        app:layout_constraintTop_toBottomOf="@id/no2_btn"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/plus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toEndOf="@id/comma_btn"
        app:layout_constraintEnd_toStartOf="@id/equals_btn"
        app:layout_constraintTop_toBottomOf="@id/no3_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/equals_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textBackgroundColor"
        android:checkable="true"
        android:text="="
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="@id/back_btn"
        app:layout_constraintTop_toBottomOf="@id/minus_btn"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>